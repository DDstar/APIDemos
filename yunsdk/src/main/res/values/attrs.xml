<resources>
    <attr name="textSize" format="dimension" />

    <!-- Standard orientation constant. -->
    <attr name="orientation">
        <!-- Defines an horizontal widget. -->
        <enum name="horizontal" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="vertical" value="1" />
    </attr>

    <!-- Standard axis_type constant. -->
    <attr name="axis_type">
        <!-- Defines an horizontal widget. -->
        <enum name="numeric" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="month" value="1" />
    </attr>

    <!-- Standard axis_type constant. -->
    <attr name="x_axis_type">
        <!-- Defines an horizontal widget. -->
        <enum name="numeric" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="month" value="1" />
    </attr>

    <!-- Standard axis_type constant. -->
    <attr name="y_axis_type">
        <!-- Defines an horizontal widget. -->
        <enum name="numeric" value="0" />
        <!-- Defines a vertical widget. -->
        <enum name="month" value="1" />
    </attr>



    <declare-styleable name="CoordinateAxis">
        <attr name="orientation"/>
        <attr name="axis_type"/>
        <attr name="axis_start" format="float"/>
        <attr name="axis_end" format="float"/>
        <attr name="axis_step" format="float"/>
        <attr name="axis_start_offset" format="dimension"/>
        <attr name="arrowH" format="dimension"/>
        <attr name="arrowW" format="dimension"/>
        <attr name="arrowLineWidth" format="dimension"/>
        <attr name="textSize"/>
    </declare-styleable>

    <declare-styleable name="CoordinateGraph">
        <attr name="orientation"/>
    </declare-styleable>

    <declare-styleable name="CoordinateSystem">
        <attr name="axis_textSize" format="dimension"/>
        <attr name="x_axis_type"/>
        <attr name="y_axis_type"/>
        <attr name="x_axis_height" format="dimension"/>
        <attr name="y_axis_width" format="dimension"/>
    </declare-styleable>
</resources>

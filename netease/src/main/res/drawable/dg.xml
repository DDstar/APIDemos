<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ff1b5062" />
                </shape>
            </item>
            <item android:bottom="1.0dip">
                <shape>
                    <solid android:color="#ff000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ff1b5062" />
                </shape>
            </item>
            <item android:bottom="1.0dip">
                <shape>
                    <solid android:color="#ff000000" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ff1a1a1a" />
                </shape>
            </item>
            <item android:bottom="1.0dip">
                <shape>
                    <solid android:color="#ff000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
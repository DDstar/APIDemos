<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <com.android.deskclock.CircleTimerView
        android:id="@+id/circleTimerView1"
        android:layout_width="100dp"
        android:layout_height="100dp" 
        android:visibility="gone"/>

    <TimePicker        
        android:id="@+id/timePicker1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/addalarm_dial"
        />

    
    <com.android.deskclock.CircleButtonsLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:visibility="gone">

        <com.android.deskclock.timer.TimerView
            android:id="@+id/timerView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </com.android.deskclock.timer.TimerView>
        
    </com.android.deskclock.CircleButtonsLayout>

</LinearLayout>
